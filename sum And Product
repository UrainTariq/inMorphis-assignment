function sumAndProduct(arr) {
    let sum = 0;
    let product = 1;
    for (let i = 0; i < arr.length; i++) {
        sum += arr[i];
        product *= arr[i];
    }
    return {
        sum: sum,
        product: product
    };
}

// Example usage:
let intArray = [1, 2, 3, 4];
let result = sumAndProduct(intArray);
console.log('Sum:', result.sum); // Output: Sum: 10
console.log('Product:', result.product); // Output: Product: 24
